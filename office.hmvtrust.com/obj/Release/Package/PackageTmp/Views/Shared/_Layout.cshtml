                                <li class="sidenav-item active">
                                    <a href="~/pettycash/list" class="sidenav-link sidebar-dropdown-nav-link">
                                        <i class="sidenav-icon fa fa-coins"></i><span>PettyCash</span>
                                    </a>
                                </li>
                                @*<li class="sidenav-item active">
                        <a href="~/member/index" class="sidenav-link sidebar-dropdown-nav-link">
                            <i class="sidenav-icon fa fa-user-secret"></i><span>Member Details</span>
                        </a>
                    </li>*@
                            </ul>
                        </li>
