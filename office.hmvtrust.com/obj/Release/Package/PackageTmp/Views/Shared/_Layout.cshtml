                        <li class="sidenav-item">
                            <a href="~/access/list" class="sidenav-link">
                                <i class="sidenav-icon fa fa-users-cog"></i> <span>Access</span>
                            </a>
                        </li>
                    }
                    @if ((User.IsInRole("Admin")))
                    {
                        <li class="sidenav-item">
                            <a href="~/branch/list" class="sidenav-link">
                                <i class="sidenav-icon fa fa-building"></i> <span>Branch</span>
                            </a>
                        </li>
                    }
                    @if ((User.IsInRole("Admin")))
