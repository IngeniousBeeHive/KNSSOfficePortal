                            <a class="sidenav-link" href="#pageSubmenu2" data-toggle="collapse" aria-expanded="false">
                                <i class="sidenav-icon fa fa-book-open"></i> <span>Library</span>
                            </a>
                            <ul class="collapse list-unstyled" id="pageSubmenu2">
                                <li class="sidenav-item active">
                                    <a href="~/bookcategory/list" class="sidenav-link sidebar-dropdown-nav-link">
                                        <i class="sidenav-icon fa fa-bookmark"></i><span>Book Category</span>
                                    </a>
                                </li>
                                <li class="sidenav-item active">
                                    <a href="~/books/list" class="sidenav-link sidebar-dropdown-nav-link">
                                        <i class="sidenav-icon fa fa-book-open"></i><span>Books</span>
                                    </a>
                                </li>
                                <li class="sidenav-item active">
                                    <a href="~/librarylog/list" class="sidenav-link sidebar-dropdown-nav-link">
                                        <i class="sidenav-icon fa fa-book-reader"></i><span>Log Details</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                    @if ((User.IsInRole("Admin")))
                    {
                        <li class="sidenav-item">
                            <a class="sidenav-link" href="#pageSubmenu3" data-toggle="collapse" aria-expanded="false">
                                <i class="sidenav-icon fa fa-cogs"></i> <span>Settings</span>
                            </a>
                            <ul class="collapse list-unstyled" id="pageSubmenu3">
                                <li class="sidenav-item active">
                                    <a href="~/member/findbloodmatch" class="sidenav-link sidebar-dropdown-nav-link">
                                        <i class="sidenav-icon fa fa-ambulance"></i><span>Search Blood Type</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
