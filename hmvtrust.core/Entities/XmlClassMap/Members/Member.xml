<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping assembly="hmvtrust.core"
                   namespace="hmvtrust.core.Entities"
                   xmlns="urn:nhibernate-mapping-2.2">

  <class name="Member" table="Members" lazy="false" >
    <id name="Id" column="MemberId">
      <generator class="identity"></generator>
    </id>

    <many-to-one name="BranchId" column="BranchId" class="hmvtrust.core.Entities.Branch,hmvtrust.core" not-null="true" fetch="join"                  />
    
    <property     name="FamilyNo"                                   not-null="true"                                                                  />
    
    <many-to-one name="MemberTypeId" column="MemberTypeId" class="hmvtrust.core.Entities.MemberType,hmvtrust.core" not-null="true" fetch="join"      />
    <property     name="MemberName"         length="500"            not-null="true"                                                                  />
    <property     name="Gender"             length="50"             not-null="true"                                                                  />
    <property     name="DateofBirth"                                                                                                                 />
    <property     name="Age"                                                                                                                         />
    <property     name="MobileNo"             length="50"                                                                                            />
    <property     name="AlternateMobileNo"    length="50"                                                                                            />
    <property     name="Email"                length="50"                                                                                            />
    <property     name="Status"                                                                                                                      />
    <property     name="Address"              length="500"                                                                                           />
    <property     name="Photo"                length="50"                                                                                            />
    <property     name="BloodGroup"           length="50"                                                                                            />

    <property     name="CreatedDate"                                  not-null="true"                                                                />
    <property     name="ModifiedDate"                                                                                                                />
    <property     name="DeletedDate"                                                      unique-key="uk_useremail,uk_usermobile"                    />


  </class>
</hibernate-mapping>