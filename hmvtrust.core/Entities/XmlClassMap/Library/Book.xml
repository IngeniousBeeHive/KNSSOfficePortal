<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping assembly="hmvtrust.core"
                   namespace="hmvtrust.core.Entities"
                   xmlns="urn:nhibernate-mapping-2.2">

  <class name="Book" table="Books" lazy="false" >
    <id name="Id" column="BookId">
      <generator class="identity"></generator>
    </id>
    
    <property     name="BookNo"                                                                                               />
    <property     name="BookName"         length="500"                                                                        />
    <property     name="AuthorName"       length="500"                                                                        />
    <many-to-one name="CategoryId" column="CategoryId" class="hmvtrust.core.Entities.BookCategory,hmvtrust.core" not-null="true" fetch="join"/>

    <property     name="CreatedDate"                                  not-null="true"                                                         />
    <property     name="ModifiedDate"                                                                                                         />
    <property     name="DeletedDate"                                                      unique-key="uk_useremail,uk_usermobile"             />


  </class>
</hibernate-mapping>